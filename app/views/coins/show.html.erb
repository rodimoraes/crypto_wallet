<h1>Show Coin</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @coin.id%>
</p>
<p>
  <strong>Description:</strong>
  <%= @coin.description %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @coin.acronym %>
</p>

<p>
  <strong>Url image:</strong>
  <%#= @coin.url_image %>
  <%= image_tag (@coin.url_image), size:"25x25"%>
</p>

<p>
  <strong>Dollar value:</strong>
  <%= @coin.dollar_value %>
</p>

<p>
  <strong>Mining Type:</strong>
  <%if @coin.mining_type%>
    <%= @coin.mining_type.description%>
  <%else%>
    <i>not registered</i>  
  <%end%>
</p>

<%= link_to 'Editar', edit_coin_path(@coin) %> |
<%= link_to 'Voltar', coins_path %>
