                                                
<h1>Show Coin</h1>
<p id="notice"><%= notice %></p>
<p>
  <strong><%=Coin.human_attribute_name(:id)%></strong>
  <%= @coin.id%>
</p>
<p>
  <strong><%=Coin.human_attribute_name(:description)%>:</strong>
  <%= @coin.description %>
</p>
<p>
  <strong><%=Coin.human_attribute_name(:acronym)%></strong>
  <%= @coin.acronym %>
</p>
<p>
  <strong><%=Coin.human_attribute_name(:url_image)%></strong>
  <%#= @coin.url_image %>
  <%= image_tag (@coin.url_image), size:"25x25"%>
</p>
<p>
  <strong><%=Coin.human_attribute_name(:dollar_value)%></strong>
  <%= @coin.dollar_value %>
</p>
<p>
  <strong>Mining Type:</strong>
  <%if @coin.mining_type%>
    <%= @coin.mining_type.description%>
  <%else%>
    <i>not registered</i>
  <%end%>
</p>
<%= link_to t('links.edit'), edit_coin_path(@coin) %> |
<%= link_to t('links.back'), coins_path %>
