<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Valor em Dollar</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= link_to 'Nova Moeda', new_coin_path %>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.id%></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25"%></td>
        <td>US$ <%= coin.dollar_value %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

