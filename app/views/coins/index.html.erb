<h1>Moedas</h1>

<h2><%=cookies[:curso]%></h2>
<h2><%=session[:curso]%></h2>

<table class="table table-hover" >
  <thead class="thead-light">
    <tr>
      <th>id</th>
      <th><%= Coin.human_attribute_name(:description)%></th>
      <th><%= Coin.human_attribute_name(:acronym)%></th>
      <th><%= Coin.human_attribute_name(:url_image)%></th>
      <th><%= Coin.human_attribute_name(:dollar_value)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to 'Nova Moeda', new_coin_path %>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.id%></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25"%></td>
        <td>US$ <%= coin.dollar_value %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: I18n.t('message.delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
